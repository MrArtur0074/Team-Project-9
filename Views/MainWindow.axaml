<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Project_9.ViewModels"
        xmlns:v="using:Project_9.Views"
        x:Class="Project_9.Views.MainWindow"
        Title="Aircraft Wing Design Tool"
        Width="800"
        Height="600">

    <!-- Define DataTemplates as a separate property -->
    <Window.DataTemplates>
        <DataTemplates>
            <!-- Wing Geometry View -->
            <DataTemplate DataType="vm:WingGeometryViewModel">
                <v:WingGeometryView />
            </DataTemplate>

            <!-- Airfoil Config View -->
            <DataTemplate DataType="vm:AirfoilConfigViewModel">
                <v:AirfoilConfigView />
            </DataTemplate>

            <!-- Rib Placement View -->
            <DataTemplate DataType="vm:RibPlacementViewModel">
                <v:RibPlacementView />
            </DataTemplate>

            <!-- Spar Config View -->
            <DataTemplate DataType="vm:SparConfigViewModel">
                <v:SparConfigView />
            </DataTemplate>

            <!-- DWG Export View -->
            <DataTemplate DataType="vm:DwgExportViewModel">
                <v:DwgExportView />
            </DataTemplate>
        </DataTemplates>
    </Window.DataTemplates>

    <DockPanel>
        <!-- Navigation Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Previous" Command="{Binding NavigatePrevious}" Margin="5" />
            <Button Content="Next" Command="{Binding NavigateNext}" Margin="5" />
        </StackPanel>

        <!-- Undo/Redo Buttons -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Undo" Command="{Binding UndoCommand}" Margin="5" />
            <Button Content="Redo" Command="{Binding RedoCommand}" Margin="5" />
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>