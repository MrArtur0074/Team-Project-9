<Window
    x:Class="Oswalt.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:vm="clr-namespace:Oswalt.ViewModels"
    xmlns:v="clr-namespace:Oswalt.Views"
    Title="Oswalt"
    Height="600"
    Width="800"
    WindowState="Maximized">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:WingGeometryViewModel}">
            <v:WingGeometryView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RibPlacementViewModel}">
            <v:RibPlacementView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SparConfigViewModel}">
            <v:SparConfigView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AirfoilConfigViewModel}">
            <v:AirfoilConfigView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DwgExportViewModel}">
            <v:DwgExportView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Undo/Redo Buttons -->
        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="10">
            <Button Content="Undo" Command="{Binding UndoCommand}" Margin="5" />
            <Button Content="Redo" Command="{Binding RedoCommand}" Margin="5" />
        </StackPanel>

        <!-- Navigation Buttons -->
        <StackPanel
            DockPanel.Dock="Bottom"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="10">
            <Button Content="Previous" Command="{Binding NavigatePrevious}" Margin="5" />
            <Button Content="Next" Command="{Binding NavigateNext}" Margin="5" />
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>