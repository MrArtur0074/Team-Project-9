<UserControl
    x:Class="Project_9.Views.WingGeometryView"
    x:DataType="vm:WingGeometryViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="using:Project_9.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid
        ColumnDefinitions="Auto,200"
        Margin="10"
        RowDefinitions="Auto,Auto,Auto,Auto">


        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Text="Wing Name:"
            VerticalAlignment="Center" />
        <TextBox
            Grid.Column="1"
            Grid.Row="0"
            Margin="5"
            Text="{Binding Name}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            Text="Root Chord Length:"
            VerticalAlignment="Center" />
        <NumericUpDown
            Grid.Column="1"
            Grid.Row="1"
            Margin="5"
            Value="{Binding RootChord}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="2"
            Text="Wing Span:"
            VerticalAlignment="Center" />
        <NumericUpDown
            Grid.Column="1"
            Grid.Row="2"
            Margin="5"
            Value="{Binding Span}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="3"
            Text="Incidence Angle:"
            VerticalAlignment="Center" />
        <NumericUpDown
            Grid.Column="1"
            Grid.Row="3"
            Margin="5"
            Value="{Binding IncidenceAngle}" />
    </Grid>
</UserControl>