<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Project_9.ViewModels"
             x:Class="Project_9.Views.SparConfigView"
             x:DataType="vm:SparConfigViewModel">

    <StackPanel Margin="10">
        <Button Content="Add Rectangular Spar" Command="{Binding AddRectSparCommand}" Margin="5" />
        <Button Content="Remove Spar" Command="{Binding RemoveSparCommand}" Margin="5" />

        <ListBox ItemsSource="{Binding Spars}" SelectedItem="{Binding SelectedSpar}" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>