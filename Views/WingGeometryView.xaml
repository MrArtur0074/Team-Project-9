<UserControl
    x:Class="Oswalt.Views.WingGeometryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Oswalt.ViewModels"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">

    <Grid
        ColumnDefinitions="Auto,200"
        Margin="10"
        RowDefinitions="Auto,Auto,Auto,Auto">

        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Text="Wing Name:"
            VerticalAlignment="Center" />
        <TextBox
            Grid.Column="1"
            Grid.Row="0"
            Margin="5"
            Text="{Binding Name}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            Text="Root Chord Length:"
            VerticalAlignment="Center" />
        <controls:NumericUpDown
            Grid.Column="1"
            Grid.Row="1"
            Margin="5"
            Value="{Binding RootChord}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="2"
            Text="Wing Span:"
            VerticalAlignment="Center" />
        <controls:NumericUpDown
            Grid.Column="1"
            Grid.Row="2"
            Margin="5"
            Value="{Binding Span}" />

        <TextBlock
            Grid.Column="0"
            Grid.Row="3"
            Text="Incidence Angle:"
            VerticalAlignment="Center" />
        <controls:NumericUpDown
            Grid.Column="1"
            Grid.Row="3"
            Margin="5"
            Value="{Binding IncidenceAngle}" />
    </Grid>
</UserControl>
