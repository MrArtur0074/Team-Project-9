<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Project_9.ViewModels"
             x:Class="Project_9.Views.WingGeometryView"
             x:DataType="vm:WingGeometryViewModel">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,200" Margin="10">
        <TextBlock Text="Wing Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Margin="5" />

        <TextBlock Text="Root Chord Length:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
        <NumericUpDown Value="{Binding RootChord}" Grid.Row="1" Grid.Column="1" Margin="5" />

        <TextBlock Text="Wing Span:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
        <NumericUpDown Value="{Binding Span}" Grid.Row="2" Grid.Column="1" Margin="5" />

        <TextBlock Text="Incidence Angle:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
        <NumericUpDown Value="{Binding IncidenceAngle}" Grid.Row="3" Grid.Column="1" Margin="5" />
    </Grid>
</UserControl>