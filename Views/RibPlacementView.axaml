<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Project_9.ViewModels"
             x:Class="Project_9.Views.RibPlacementView"
             x:DataType="vm:RibPlacementViewModel">

    <StackPanel Margin="10">
        <Button Content="Add Rib" Command="{Binding AddRibCommand}" Margin="5" />
        <Button Content="Remove Rib" Command="{Binding RemoveRibCommand}" Margin="5" />
        <Button Content="Reset Ribs" Command="{Binding ResetRibsCommand}" Margin="5" />

        <ListBox ItemsSource="{Binding Ribs.Ribs}" SelectedIndex="{Binding SelectedRibIndex}" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>