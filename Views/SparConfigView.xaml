<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Oswalt.ViewModels"
             x:Class="Oswalt.Views.SparConfigView"
             x:DataType="vm:SparConfigViewModel">

    <StackPanel Margin="10">
        <Button Content="Add Rectangular Spar" Command="{Binding AddRectSparCommand}" Margin="5" />
        <Button Content="Remove Spar" Command="{Binding RemoveSparCommand}" Margin="5" />

        <ListBox ItemsSource="{Binding Spars}" SelectedItem="{Binding SelectedSpar}" Margin="5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>